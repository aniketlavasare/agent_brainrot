{
  "manifest_version": 3,
  "name": "Agent Brainrot",
  "version": "1.1.0",
  "description": "An always-on corner agent that spawns brainrot (videos, jokes, games).",
  "icons": {
    "16": "assets/agent_idle.svg",
    "32": "assets/agent_idle.svg",
    "48": "assets/agent_idle.svg",
    "128": "assets/agent_idle.svg"
  },
  "permissions": ["storage", "scripting", "activeTab"],
  "host_permissions": ["https://*/*", "http://*/*"],
  "action": {
    "default_title": "Agent Brainrot",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/agent_idle.svg",
      "24": "assets/agent_idle.svg",
      "32": "assets/agent_idle.svg"
    }
  },
  "background": { "service_worker": "background.js" },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; base-uri 'self'; img-src 'self' data: https:; style-src 'self' 'unsafe-inline'; connect-src 'self' https://www.googleapis.com https://*.googleapis.com https://api.elevenlabs.io; frame-src 'self' https://www.youtube.com https://www.youtube-nocookie.com; frame-ancestors *;"
  },
  "commands": {
    "toggle-agent": {
      "suggested_key": { "default": "Alt+Shift+B" },
      "description": "Toggle Agent Brainrot"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [
        "agent/agent.html",
        "agent/agent.css",
        "agent/agent.js",
        "features/video/video.html",
        "features/video/video.css",
        "features/video/video.js",
        "features/video/yt.js",
        "features/games/tictactoe/tictactoe.html",
        "features/games/tictactoe/tictactoe.css",
        "features/games/tictactoe/tictactoe.js",
        "features/fidgit/fidgit.html",
        "features/fidgit/fidgit.css",
        "features/fidgit/fidgit.js",
        "features/jokes/jokes.js",
        "features/tts/eleven.js",
        "assets/*",
        "common/ui.css"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
